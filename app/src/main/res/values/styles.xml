<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_navigation_item_color</item>
        <item name="itemTextColor">@color/bottom_navigation_item_color</item>
        <item name="itemRippleColor">@color/bottom_navigation_ripple_color</item>
        <item name="itemTextAppearanceActive">@style/MyBottomNavigationItemTextAppearanceActive
        </item>
    </style>

    <style name="MyBottomNavigationItemTextAppearanceActive" parent="TextAppearance.MyTheme.Caption">
        <item name="fontFamily">@font/primary_bold</item>
        <item name="android:fontFamily">@font/primary_bold</item>
    </style>

    <!--style for auth activity-->
    <style name="Theme.IStore.AuthTheme.Button" parent="Theme.IStore.AuthTheme">
        <item name="backgroundTint">?colorOnBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:fontFamily">@font/primary_bold</item>
    </style>

    <style name="Theme.IStore.AuthTheme.EditText" parent="Theme.IStore.AuthTheme">
        <item name="android:background">@drawable/bg_et_auth</item>
        <item name="android:textColorHint">#48ffffff</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="MyCustomShippingTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="MyCustomShippingTextInputEditTextStyle" parent="Theme.IStore">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyCustomProfileLinks">
        <item name="android:minHeight">46dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="MyCustomAvatar">
        <item name="cornerSize">50%</item>
    </style>

</resources>